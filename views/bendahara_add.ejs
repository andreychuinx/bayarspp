<!DOCTYPE html>
<html lang="en">
<%- include partials/metahead %>

<body>
  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <%- include partials/header %>
      <%- include partials/sidebar %>
    </nav>
    <!-- End: Navigation -->

    <%
        var header = 'Tambah'
        var action = 'add'
        if (bendahara) {
          header = 'Edit'
          action = `edit/${bendahara.id}`
        }
      %>

    <!-- Page Content -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">

            <h1 class="page-header"><%= header %> <%= title %></h1>
            <!-- Alert Message -->
            <% if (errMessage) { %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= errMessage %>
            </div>
            <% } %>

            <div class="row">
              <div class="col-md-12">
                <form action="/bendahara/<%= action %>" method="post" role="form">
                  <div class="form-group">
                    <label>Username</label>
                    <input name="username" value="<%= bendahara.username %>" type="text" placeholder="Username Anda.."
                      class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input name="password" value="<%= bendahara.password %>" type="password"
                      placeholder="Password Anda.." class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Name</label>
                    <input name="nama" value="<%= bendahara.nama %>" type="text" placeholder="Nama Anda.."
                      class="form-control" required>

                  </div>
                  <button type="submit" class="btn btn-primary">Simpan</button>
                  <a href="/bendahara" class="btn btn-default">Kembali</a>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- End: Page Content -->
  </div> <!-- /#wrapper -->

  <%- include partials/jsfooter %>
</body>

</html>