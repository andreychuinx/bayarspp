<!DOCTYPE html>
<html lang="en">
<%- include partials/metahead %>

<body>
	<div id="wrapper">
		<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<%- include partials/header %>
			<%- include partials/sidebar %>
		</nav>
		<!-- End: Navigation -->

		<!-- Page Content -->
		<div id="page-wrapper">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">

						<h1 class="page-header"><%= title %></h1>

						<p align="right"><a href="/jurnal/add" class="btn btn-outline btn-default"><i class="fa fa-file-o"></i>
								Tambah</a></p>
						<% if (errMessage) { %>
						<div class="alert alert-danger alert-dismissable">
							<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
							<%= errMessage %>
						</div>
						<% } %>
						<div class="dataTable_wrapper">
							<table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
									<tr>
										<th>No</th>
										<th>Nama Jurnal</th>
										<th>Tgl Jurnal</th>
										<th>Bendahara</th>
										<th>Keterangan</th>
										<th>Action</th>

									</tr>
								</thead>
								<tbody>
									<% for (let i = 0; i < jurnals.length; i++) { %>
									<tr class="odd gradeX">
										<td><a href="/jurnal/detail/<%= jurnals[i].id %>"><%= jurnals[i].id %></a></td>
										<td><%= jurnals[i].nama_jurnal %></td>
										<td><%= jurnals[i].tgl_jurnal && new Date(jurnals[i].tgl_jurnal).toLocaleDateString() %></td>
										<td><%= jurnals[i].Bendahara.username %></td>
										<td><%= jurnals[i].keterangan %></td>
										<td class="text-center">
											<a href="/jurnal/delete/<%= jurnals[i].id %>" class="btn btn-danger btn-circle"
												onclick="return confirm('Are you sure want to delete ?')"><i class="fa fa-remove"></i></a>
										</td>
									</tr>
									<% } %>
								</tbody>
							</table>
						</div>

					</div>
				</div>
			</div>
		</div>
		<!-- End: Page Content -->
	</div> <!-- /#wrapper -->

	<%- include partials/jsfooter %>
</body>

</html>