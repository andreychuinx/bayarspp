<!DOCTYPE html>
<html lang="en">
  <%- include partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include partials/header %>
        <%- include partials/sidebar %>
      </nav>
      <!-- End: Navigation -->
      <%
        var header = 'Add'
        var action = 'add'
        if(jurnal){
          header = 'Edit'
          action = `edit/${jurnal.id}`
        }
      %>
      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%=header%> <%= title %></h1>
              <!-- Alert Message -->
              <% if (errMessage) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= errMessage %>
              </div>
              <% } %>

              <div class="row">
                <div class="col-md-12">
                  <form action="/jurnal/<%=action%>" method="post" role="form">
                    <div class="form-group">
                      <label>Nama Jurnal</label>
                      <input name="nama_jurnal" value="<%= jurnal.nama_jurnal %>" type="text" placeholder="Nama Jurnal" class="form-control" required>
                    </div>
									<div class="form-group">
                    <label>Tgl Jurnal</label>
                    <input class="form-control" id="date" name="tgl_jurnal" placeholder="MM/DD/YYY" type="text"
                      value="<%= jurnal.tgl_jurnal %>" />

									</div>
									<div class="form-group">
											<label>Keterangan</label>
	
											<textarea name="keterangan" class="form-control" required><%= jurnal.keterangan%></textarea>
										</div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/jurnal" class="btn btn-default">Cancel</a>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include partials/jsfooter %>
  </body>
</html>