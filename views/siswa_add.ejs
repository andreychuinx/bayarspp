<!DOCTYPE html>
<html lang="en">
  <%- include partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include partials/header %>
        <%- include partials/sidebar %>
      </nav>
      <!-- End: Navigation -->
      <%
        var header = 'Add'
        var action = 'add'
        if(siswa){
          header = 'Edit'
          action = `edit/${siswa.id}`
        }
      %>
      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%=header%> <%= title %></h1>
              <!-- Alert Message -->
              <% if (errMessage) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= errMessage %>
              </div>
              <% } %>

              <div class="row">
                <div class="col-md-12">
									<form action="/barang/<%=action%>" method="post" role="form">
										<div class="form-group">
                      <label>NIS</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="NIS Siswa" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Nama Siswa</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Nama Siswa" class="form-control" required>
										</div>
										<div class="form-group">
                      <label>Jurusan</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Jurusan" class="form-control" required>
										</div>
										<div class="form-group">
                      <label>Kelas</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Kelas" class="form-control" required>
										</div>
										<div class="form-group">
												<label for="exampleFormControlSelect1">Jenis Kelamin</label>
												<select class="form-control">
													<option>Select...</option>
													<option>Laki-Laki</option>
													<option>Perempuan</option>
												</select>
											</div>
										<div class="form-group">
                      <label>Tempat, Tanggal Lahir</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Tgl Lahir" class="form-control" required>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Tgl Lahir" class="form-control" required>
										</div>
										<div class="form-group">
                      <label>Alamat</label>
                      <textarea name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="Alamat" class="form-control" required>
											</textarea>
										</div>
										<div class="form-group">
                      <label>No Telepon</label>
                      <input name="nama_siswa" value="<%= siswa.nama_siswa %>" type="text" placeholder="No Telepon" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Stock</label>
                      <input name="stock" value="<%= siswa.stock %>" type="text" placeholder="Stock" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/siswa" class="btn btn-default">Cancel</a>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include partials/jsfooter %>
  </body>
</html>