<!DOCTYPE html>
<html lang="en">
<%- include partials/metahead %>

<body>
  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <%- include partials/header %>
      <%- include partials/sidebar %>
    </nav>
    <!-- End: Navigation -->
    <%
        var header = 'Add'
        var action = 'add'
        if(siswa){
          header = 'Edit'
          action = `edit/${siswa.id}`
        }
      %>
    <!-- Page Content -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">

            <h1 class="page-header"><%=header%> <%= title %></h1>
            <!-- Alert Message -->
            <% if (errMessage) { %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= errMessage %>
            </div>
            <% } %>

            <div class="row">
              <div class="col-md-12">
                <form action="/siswa/<%=action%>" method="post" role="form">
                  <div class="form-group">
                    <label>NIS</label>
                    <input name="nis" value="<%= siswa.nis %>" type="text" placeholder="NIS Siswa"
                      value="<%= siswa.nis %>" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Nama Siswa</label>
                    <input name="nama" value="<%= siswa.nama %>" type="text" placeholder="Nama Siswa"
                      class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Jurusan</label>
                    <input name="jurusan" value="<%= siswa.jurusan %>" type="text" placeholder="Jurusan"
                      class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Kelas</label>
                    <input name="kelas" value="<%= siswa.kelas %>" type="text" placeholder="Kelas" class="form-control"
                      required>
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlSelect1">Jenis Kelamin</label>
                    <select name="jenis_kelamin" class="form-control" required>
                      <option value="0">-- Select One --</option>
                      <% jenis_kelamin.forEach((jk) => { %>
                      <option <% if (jk == siswa.jenis_kelamin) { %> selected <% } %> value="<%= jk%>"><%= jk%></option>
                      <% })  %>
                    </select>
                  </div>

                  <div class="form-group col-md-6" style="padding-left: 0%">
                    <label>Tempat Lahir</label>
                    <input type="text" class="form-control" name="tempat_lahir" placeholder="Tempat Lahir"
                      value="<%= siswa.tempat_lahir %>">
                  </div>
                  <div class="form-group col-md-6" style="padding-right: 0%">
                    <label>Tanggal Lahir</label>
                    <input class="form-control" id="date" name="tgl_lahir" placeholder="MM/DD/YYY" type="text" value="<%= siswa.tgl_lahir %>"/>

                  </div>
                  <div class="form-group">
                    <label>Alamat</label>

                    <textarea name="alamat" class="form-control" required><%= siswa.alamat && siswa.alamat.trim() %>
											</textarea>
                  </div>
                  <div class="form-group">
                    <label>No Telepon</label>
                    <input name="no_telepon" value="<%= siswa.no_telepon %>" type="text" placeholder="No Telepon"
                      class="form-control" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Save</button>
                  <a href="/siswa" class="btn btn-default">Cancel</a>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- End: Page Content -->
  </div> <!-- /#wrapper -->

  <%- include partials/jsfooter %>
</body>

</html>