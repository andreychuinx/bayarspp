<!DOCTYPE html>
<html lang="en">
  <%- include partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include partials/header %>
        <%- include partials/sidebar %>
      </nav>
      <!-- End: Navigation -->

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%= title %></h1>

              <p align="right"><a href="/transaksi/add" class="btn btn-outline btn-default"><i class="fa fa-file-o"></i> Tambah</a></p>

              <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>NIS Siswa</th>
                      <th>Nama Siswa</th>
                      <th>Kelas</th>
                      <th>Pembayaran</th>
                      <th>Bulan, Tahun</th>
                      <th>Tgl Bayar</th>
                      <th>Total Bayar</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < transaksi.length; i++) { %>
                      <tr class="odd gradeX">
                        <td><%= i + 1 %></td>
                        <td><%= transaksi[i].Siswa.nis %></td>
                        <td><%= transaksi[i].Siswa.nama %></td>
                        <td><%= transaksi[i].Siswa.kelas %></td>
                        <td><%= transaksi[i].type_transaksi %></td>
                        <td><%= transaksi[i].bayar_bulan %> - <%= transaksi[i].bayar_tahun %></td>
                        <td><%= transaksi[i].tgl_bayar && new Date(transaksi[i].tgl_bayar).toISOString().slice(0,10) %></td>
                        <td><%= transaksi[i].jumlah %></td>
                        <td class="text-center">
                          <a href="/transaksi/edit/<%= transaksi[i].id %>" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></a>
                          <a href="/transaksi/delete/<%= transaksi[i].id %>" class="btn btn-danger btn-circle" onclick="return confirm('Are you sure want to delete ?')"><i class="fa fa-remove"></i></a>
                          <a href="/public/kwitansi_pembayaran_<%= transaksi[i].id %>.pdf" target="_blank" class="btn btn-success btn-circle" ><i class="fa fa-download"></i></a>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include partials/jsfooter %>
  </body>
</html>
